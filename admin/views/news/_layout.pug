extends ../_layout

include ../_mixins/forms/index
include ../_mixins/subMenu
include ../_mixins/showItems

block main
    block controls
        +subMenu({
            'Создать': '/admin/news/create',
            'Сбросить': `/admin/news?page=${page}&limit=${limit}`
        },[
            {
                title: 'Фильтры',
                href: `/admin/news?published=true`,
                drop: [{
                    title: 'Date >',
                    href: '/admin/news?dateUp=true'
                },{
                    title: 'Date <',
                    href: '/admin/news?dateUp=false'
                }],
            },
            {
                title: 'Опубликованые',
                href: `/admin/news?page=${page}&limit=${limit}&published=true`
            },
            {
                title: 'Неопубликованые',
                href: `/admin/news?page=${page}&limit=${limit}&published=false`
            }
        ])
    .container.py-4
        block content